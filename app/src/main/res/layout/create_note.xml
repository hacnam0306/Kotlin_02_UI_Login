<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <EditText
            android:hint="Title"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="34sp"
            android:textColor="#98A8B7"
            android:layout_height="wrap_content" android:id="@+id/title"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.116" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="8dp"/>
    <EditText
            android:hint="Your notes here..."
            android:layout_width="wrap_content"
            android:textStyle=""
            android:textSize="16sp"
            android:textColor="#98A8B7"
            android:layout_height="wrap_content" android:id="@+id/content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.114" app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginTop="24dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.012" android:minHeight="48dp"/>
    <TextView
            android:text="Add notes"
            android:layout_width="0dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#303030"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.461"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
